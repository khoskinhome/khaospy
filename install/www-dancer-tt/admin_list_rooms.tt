<!DOCTYPE html>
<html>
<head>
    [% INCLUDE header_jquery.tt %]
    <script src="/js/admin_list_rooms.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/admin_list_rooms.css">
</head>
<body>
    <div class='main'>
        <table>
            <tr><td>
                [% INCLUDE title_linkbar_admin.tt %]
                <ul class='link_bar'>
                    <li class='nav_link'><a href='/dancer/admin/add_room'>Add Room</a></li>
                </ul>
            </td></tr>
        </table>

        <div class='center' id='update-output'></div>
        <table>
            <tr>
                <th>Room</th>
                <th>Tag</th>
            </tr>

          [% FOREACH row IN list_rooms %]
            <tr>
                <td>
                    [% row.name %]
                </td>
                <td>
                    [% row.tag %]
                </td>
                <td>
                    <button class='listusers' id='listusers-id[% row.id %]'>Users</button>
                </td>
                <td>
                    <button class='listcontrols' id='listcontrols-id[% row.id %]'>Controls</button>
                </td>
                <td>
                    <button class='edit' id='edit-id[% row.id %]'>Edit</button>
                </td>
                <td>
                    <button class='delete' id='delete-id[% row.id %]'>Delete</button>
                </td>
            </tr>
          [% END %]
        </table>
    </div>
</body>
</html>
