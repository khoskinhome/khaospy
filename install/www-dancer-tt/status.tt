<!DOCTYPE html>
<html>
<head>

    [% INCLUDE header_jquery.tt %]

    <script src="/js/status.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/status.css">

</head>
<body>
    <div class='main'>
        <div class='title_n_links'>[% INCLUDE title_linkbar.tt %]</div>
        <div class='error_msg'>[% error_msg %]</div>

        <div class='main_content'>
            <table>
                <thead>
                <tr class='listhead'>
                    <th>Control</th>
                    <th>On</th>
                    <th>Off</th>
                    <th>Status</th>
                    <th>Last Update time</th>
                    <th>Changed</th>
                </tr>
                </thead>

                <tbody>
                    [% FOREACH row IN entries %]
                    <tr class='list'>
                        <td >[% row.control_name %]</td>

                            [% IF row.can_operate %]
                                <td>
                                    <button id='[% row.control_name %]' value='on'>On</button>
                                </td>
                                <td>
                                    <button id='[% row.control_name %]' value='off'>Off</button>
                                </td>
                            [% ELSE %]
                                <td></td><td></td>
                            [% END %]

                        <td align='center' id='[% row.control_name %]-state_alias'>[% row.current_state_value %]</td>
                        <td id='[% row.control_name %]-request_time'>[% row.request_time %]</td>
                        <td id='[% row.control_name %]-info'></td>
                    </tr>
                    [% END %]
                <tbody>
            </table>
        </div>
    </div>
</body>
</html>
